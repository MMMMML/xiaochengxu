/* pages/wait/wait.wxss */
.box{
  padding: 30rpx 60rpx;
  font-size: 14px;
  box-sizing: border-box;
}
.list{
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ececec;
}
.schedule{
  padding: 40rpx 0;
  font-size: 18px;
  display: flex;
  justify-content: space-between;
  align-items:center;
  color:#999;

}
.nav{
  text-align: center;
  height: 80rpx;
  line-height:80rpx;
  border-bottom: 1px solid #ececec; 
  font-size: .6rem;
}
.hours{
  display: flex;
  justify-content: space-between;
  padding: 60rpx 0;
}
.bottom{
  text-align: center;
  color: red;
  padding: 30rpx 0;
}
button{
  background: #FF0000;
  color: white;
}

.alert{
  background: rgba(0, 0, 0, .5);
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index:999;

}
.cancel{
  background: white;
  position: absolute;
  bottom: 0;
  padding: 30rpx 60rpx;
  font-size: 15px;
  right:0;
  left:0;

}
.reason{
  font-weight: bold;
  padding: 20rpx 0;
  border-bottom: 1px solid #ececec;
}
.radio-group{
  display: flex;
  flex-direction: column;
  
}
.radio{
  display:flex;
  padding: 30rpx 0;
  justify-content: space-between;
}
.textarea{
  height: 140rpx;
  border: 1px solid #ececec;
  padding: 10rpx;
}
.leida{
  display:flex;
  justify-content:center;

}
.btn{
  display: flex;
  justify-content: space-around;
  margin: 30rpx 0;
  width: 100%;
}
.btn button{
  width: 45%;
  padding: 0;
}
.radar-box {
  width: 301rpx;
  height: 301rpx;
  border-radius: 50%;
  position: relative;
  background: #f4fbff;
}

.radar-box .bg {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
}

.radar-box .cover {
  width: 149rpx;
  height: 211rpx;
  position: absolute;
  left: 51.5%;
  top: 14.5%;
  animation: rotate 2s infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0);
    transform-origin: left center;
  }
  to {
    transform: rotate(360deg);
    transform-origin: left center;
  }
}
.spuare{
  width: 10rpx;
  height: 10rpx;
  background: #999;
  border-radius: 50%
}
.red{
  background: red;
}
.status {
  color: red;  
}