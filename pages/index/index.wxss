/**index.wxss**/
#myMap {
  width: 100vw;
  height: calc(100vh - 100rpx);
}
#myMaps {
  width: 100vw;
  /* height: 60vh; */
  flex: 1;
  position: relative;
  z-index: 999;
}
.imgs{
  margin: 110% auto;
}
icons{
  margin-top: 100px;
}
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}
.cover{
  position: fixed;
  bottom: 99rpx;
  left: 60rpx;
}
.cover-main{
  position: fixed;
  bottom: 88rpx;
  left: 50%;
  transform: translateX(-50%)
}
.cover-btn{
  position: fixed;
  bottom:50rpx;
  left:25rpx;
 
}
.cover-btn button{
 width: 107rpx;
 height: 39rpx;
 font-size: 24rpx;
 line-height: 39rpx;
}
.cover-kepu {
  position: fixed;
  top: 120rpx;
  right: 20rpx;
}

.road-btn {
  margin-bottom: 50rpx;
}

.road-btn button{
  width: 700rpx;
  height:70rpx;
  background: #FF0000;
  color: white;
  line-height: 70rpx;
}

.slot {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translate3d(0, -50%, 0);
  color: #999;
  border: 1px solid #999;
  font-size: 20rpx;
  height: 30rpx;
  width: 96rpx;
  line-height: 30rpx;
  text-align: center;
}
.dadian-btn{
  display: flex;
}
.dadian-btn button{
  width: 45%;
  
}
.wapper{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
}
.cover-road{
  position: absolute;
  bottom:20rpx;
  left: 20rpx;
}
.wapper-white{
  background: white;
  width: 80%;
  height: 60%;
  position: fixed;
  top: 15%;
  left: 50%;
  transform: translate(-50%);
  overflow-y: auto;
  border-radius: 20rpx;
  padding: 20rpx;
  z-index:999;
}
.close{
  position: fixed;
  bottom: 150rpx;
  left: 50%;
  transform: translateX(-50%)
}
.close-btn{
  width: 60rpx;
  height: 60rpx;
}