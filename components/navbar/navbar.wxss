/* components/navbar/navbar.wxss */
.box{
  background: #fff;
  color: black;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
}
.nav{
  width:100%;
  height:100rpx;
  flex-direction:row;
  display: inline-block;
  text-align: center;
}
.default {
  line-height:100rpx;
  text-align:center;
  justify-content: space-around;
  color:#000;
  font-weight:bold;
  font-size:28rpx;
  display: inline;
}
.default~.default {
  margin-left: 86rpx;
}
.red {
  color: #fc5558;
  position: relative;
}
.red:after {
  display: block;
  content: '';
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translate3d(-50%, 0, 0);  
  width: 72rpx;
  height: 5rpx;
  border-radius: 3px;
  background: linear-gradient(to right, #FD8989, #FF0000);
}
.show{
  display:block;
}
.hidden{
  display:none;
  text-align:center;
  line-height:200px;
}
.orderby{
  position:fixed;
  left:67rpx;
  text-align:center;
}
