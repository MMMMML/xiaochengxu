}
.default {
  line-height:100rpx;
  text-align:center;
  justify-content: space-around;
  color:#3C3C3C;
  font-size:30rpx;
  display: inline;
}
.default~.default {
  margin-left: 86rpx;
}
.red {
  color: #FF0000;
  position: relative;
  font-weight:700;
}
.red:after {
  display: block;
  content: '';
  position: absolute;
  bottom: -5px;
  left: 50%;
  transform: translate3d(-50%, 0, 0);  
  width: 72rpx;
  height: 5rpx;
  border-radius: 3px;
  background: linear-gradient(to right, #FD8989, #FF0000);
  
}
.show{
  display:block;
}
